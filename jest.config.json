{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "setupFilesAfterEnv": ["<rootDir>/src/tests/setup.js"],
  "testMatch": ["**/tests/**/*.test.ts"],
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/*.d.ts",
    "!src/tests/**"
  ]
}