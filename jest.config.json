{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "extensionsToTreatAsEsm": [".ts"],
  "transform": {
    "^.+\\.ts$": ["ts-jest", {
      "tsconfig": {
        "module": "commonjs",
        "esModuleInterop": true
      }
    }]
  },
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json"],
  "setupFilesAfterEnv": ["<rootDir>/src/tests/setup.js"],
  "testMatch": ["**/tests/**/*.test.ts"],
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/*.d.ts",
    "!src/tests/**"
  ]
}